{
  "name": "my-board-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --max-warnings=50",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "seed-dummy": "node scripts/seed-dummy-posts.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "./scripts/run-tests.sh",
    "test:quick": "jest --testPathPattern='(test|spec)\\.(ts|tsx)$' --maxWorkers=4",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand",
    "typecheck": "tsc --noEmit",
    "type-check": "tsc --noEmit",
    "lint:fix": "next lint --fix",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,md}'",
    "format:check": "prettier --check '**/*.{js,jsx,ts,tsx,json,md}'",
    "clean": "rm -rf .next out coverage playwright-report test-results",
    "clean:deps": "rm -rf node_modules package-lock.json && npm install",
    "verify": "npm run lint && npm run typecheck && npm run test:coverage",
    "precommit": "npm run lint && npm run typecheck && npm test",
    "prepare": "if [ -x ./node_modules/.bin/husky ]; then husky; fi",
    "test:security": "npm run test:rate-limit && npm run test:xss && npm run test:headers && npm run test:validation",
    "test:rate-limit": "node scripts/test-rate-limit.js auth",
    "test:xss": "node scripts/test-xss.js",
    "test:headers": "node scripts/test-security-headers.js",
    "test:validation": "node scripts/test-validation.js",
    "socket:dev": "tsx watch server/socket-server.ts",
    "socket:start": "tsx server/socket-server.ts",
    "dev:all": "concurrently \"npm run dev\" \"npm run socket:dev\"",
    "start:all": "concurrently \"npm run start\" \"npm run socket:start\"",
    "test:pwa": "playwright test __tests__/pwa/",
    "lighthouse": "node scripts/lighthouse-pwa-audit.mjs",
    "lighthouse:ci": "lhci autorun",
    "generate-icons": "node scripts/generate-pwa-icons.js",
    "generate-vapid": "node scripts/generate-vapid-keys.js"
  },
  "dependencies": {
    "@auth/mongodb-adapter": "^3.10.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@hookform/resolvers": "^5.2.1",
    "@mui/icons-material": "^7.3.1",
    "@mui/material": "^7.3.1",
    "@socket.io/redis-adapter": "^8.3.0",
    "@tanstack/react-query": "^5.85.5",
    "@tanstack/react-query-devtools": "^5.85.5",
    "@tanstack/react-virtual": "^3.13.12",
    "@types/bcryptjs": "^3.0.0",
    "@types/dompurify": "^3.2.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.20",
    "@types/nodemailer": "^6.4.18",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.5.0",
    "cloudinary": "^2.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "framer-motion": "^12.23.12",
    "isomorphic-dompurify": "^2.26.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "lru-cache": "^11.1.0",
    "lucide-react": "^0.540.0",
    "mongodb": "^6.18.0",
    "mongoose": "^8.17.0",
    "multer": "^2.0.2",
    "next": "15.4.5",
    "next-auth": "^4.24.11",
    "next-pwa": "^5.6.0",
    "nodemailer": "^6.10.1",
    "react": "19.1.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "19.1.0",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.62.0",
    "react-intersection-observer": "^9.16.0",
    "redis": "^5.8.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.1.0",
    "web-push": "^3.6.7",
    "workbox-window": "^7.3.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.0",
    "dependency-cruiser": "^17.0.1",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^12.8.1",
    "madge": "^8.0.0",
    "mongodb-memory-server": "^10.1.2",
    "msw": "^2.10.5",
    "node-mocks-http": "^1.17.2",
    "playwright": "^1.54.2",
    "puppeteer": "^24.17.0",
    "sharp": "^0.34.3",
    "tailwindcss": "^4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "typescript": "^5",
    "web-vitals": "^5.1.0"
  }
}
